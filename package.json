{
  "name": "epub-voice-reader",
  "version": "1.0.0",
  "description": "A beautiful EPUB and PDF reader with OpenAI voice playback and audiobook recording",
  "main": "main.js",
  "homepage": "https://github.com/Thoth-source/Reader",
  "author": {
    "name": "Reader App",
    "email": "readerappdev@proton.me"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:linux:dir": "electron-builder --linux --dir",
    "build:all": "electron-builder --win --mac --linux"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1",
    "node-fetch": "^2.7.0",
    "pdfjs-dist": "^5.4.449"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.reader.epub-voice-reader",
    "productName": "Reader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,README,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.cache/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "maintainer": "readerappdev@proton.me"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
